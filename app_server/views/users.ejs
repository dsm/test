<div class="container-fluid" style="margin: 30px auto 150px auto">
    <div class="row">
        <table id="table" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead class="thead-dark" align="center">
                <tr>
                    <th class="th-sm" scope="col">#
                    </th>
                    <th class="th-sm" scope="col">Name
                    </th>
                    <th class="th-sm" scope="col">Surname
                    </th>
                    <th class="th-sm" scope="col">E-mail
                    </th>
                    <th class="th-sm" scope="col">Username
                    </th>
                    <th class="th-sm" scope="col">Cardid
                    </th>
                    <th class="th-sm" scope="col">Delete
                    </th>
                    </th>
                    <th class="th-sm" scope="col">Update
                    </th>
                    </th>
                    <th class="th-sm" scope="col">Add/Remove Admin
                    </th>
                </tr>
            </thead>
            <tbody align="center">
                <%for(var i = 0;i<Users.length;i++){%>
                    <tr>
                        <%if(Users[i].admin){%>
                            <th>
                                <i class="fas fa-user-ninja"></i>
                            </th>
                            <%}else{%>
                                <th>
                                    <i class="fas fa-user"></i>
                                </th>
                                <%}%>
                                    <td>
                                        <%=Users[i].name%>
                                    </td>
                                    <td>
                                        <%=Users[i].surname%>
                                    </td>
                                    <td>
                                        <%=Users[i].email%>
                                    </td>
                                    <td>
                                        <%=Users[i].username%>
                                    </td>
                                    <td>
                                        <%=Users[i].cardid%>
                                    </td>
                                    <td>
                                        <a href="/users/deleteUser/<%=Users[i].username%>" class="btn btn-danger btn-sm active" role="button" aria-pressed="true"><i
                                                class="fas fa-trash"></i></a>
                                    </td>
                                    <td>
                                        <a href="/users/updateUser/<%=Users[i].username%>" class="btn btn-danger btn-sm active" role="button" aria-pressed="true"><i
                                                class="fas fa-user-edit"></i></a>
                                    </td>
                                    <%if(!Users[i].admin){%>
                                        <td>
                                            <a href="/users/addAdmin/<%=Users[i].username%>" class="btn btn-danger btn-sm active" role="button" aria-pressed="true"><i
                                                    class="fas fa-plus-square"></i> Add</a>
                                        </td>
                                        <%}else{%>
                                            <th>
                                                <a href="/users/removeAdmin/<%=Users[i].username%>" class="btn btn-danger btn-sm active" role="button" aria-pressed="true"><i
                                                        class="fas fa-minus-square"></i> Remove</a>
                                            </th>
                                            <%}%>
                    </tr>
                    <%}%>
            </tbody>
        </table>
    </div>
</div>